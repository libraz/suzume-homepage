{
  "name": "suzume-homepage",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vitepress dev",
    "build": "node scripts/generate-og-image.mjs && vitepress build",
    "build:og": "node scripts/generate-og-image.mjs",
    "preview": "vitepress preview",
    "copy:wasm": "cp ../suzume/dist/suzume.js ../suzume/dist/suzume-wasm.wasm .vitepress/theme/wasm/ && ./scripts/update-wasm-meta.sh",
    "update": "yarn copy:wasm && yarn dev"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "opentype.js": "^1.3.4",
    "vitepress": "^1.6.4",
    "vue": "^3.5.26"
  },
  "dependencies": {
    "mermaid": "^11",
    "vitepress-plugin-mermaid": "^2.0.17"
  }
}
